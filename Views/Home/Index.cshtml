@{
    ViewData["Title"] = "Index";
}

<h1 id="tituloAnimado"></h1>
<img id="logo" src="/Imagenes/PortadaJuego.png" alt="Logo del juego">
<p id="parrafoAnimado"></p>
<audio id="audio" src="/Audio/TemaPrincipal.mp3" loop></audio>

<script>
    window.onload = function() {
        document.getElementById('logo').classList.add('visible');
        animarTitulo();
    };

    function animarTitulo() {
        const title = "La Revelación";
        const titleElement = document.getElementById('tituloAnimado');
        let i = 0;
        function escribir() {
            if (i <= title.length) {
                titleElement.innerHTML = title.substring(0, i) + '<span class="typewriter-cursor">|</span>';
                i++;
                setTimeout(escribir, 100);
            } else {
                titleElement.innerHTML = title;
                animarParrafo();
            }
        }
        escribir();
    }

    function animarParrafo() {
        const texto = "Presione la tecla de espacio para jugar";
        const pElement = document.getElementById('parrafoAnimado');
        let i = 0;
        function escribir() {
            if (i <= texto.length) {
                pElement.innerHTML = texto.substring(0, i) + '<span class="typewriter-cursor">|</span>';
                i++;
                setTimeout(escribir, 40);
            } else {
                pElement.innerHTML = texto;
            }
        }
        escribir();
    }

    document.addEventListener('keydown', function(event) {
        if (event.code === 'Space') {
            event.preventDefault();
            window.location.href = '/Home/IngresarNombre';
        }
    });
</script>