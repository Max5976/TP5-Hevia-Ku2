@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: black;
        height: 100%;
        margin: 0;
    }

    #mensajeInicio {
        color: white;
        font-size: 200%;
        font-family: "Courier New", Courier, monospace;
        font-weight: bold;
        margin-top: 22%;
        text-align: center;
    }
</style>

<div id="mensajeInicio">Presione espacio para comenzar</div>

<script>
    const mensaje = document.getElementById('mensajeInicio');
    let visible = true;

    function parpadear() {
        mensaje.style.opacity = visible ? '0' : '1';
        visible = !visible;
    }

    setInterval(parpadear, 500);

    document.addEventListener('keydown', function(event) {
        if (event.code === 'Space') {
            event.preventDefault();
            window.location.href = '/Home/Intro';
        }
    });
</script>