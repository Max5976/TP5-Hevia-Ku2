@{
    ViewData["Title"] = "Pregunta Final";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

<style>
    body {
        background: url('/Imagenes/CuartoV.png') center center/cover no-repeat fixed;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: 'Montserrat', Arial, sans-serif;
        color: #6b4f00;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .pregunta-container {
        background: rgba(255, 245, 180, 0.92);
        border-radius: 18px;
        box-shadow: 0 4px 16px 0 rgba(120, 100, 40, 0.18);
        padding: 40px 32px 32px 32px;
        margin-top: 5vh;
        text-align: center;
        max-width: 480px;
    }
    h1 {
        font-size: 2.2em;
        margin-bottom: 18px;
        text-shadow: 2px 2px 3px #776533;
    }
    .pregunta {
        font-size: 1.3em;
        margin-bottom: 18px;
    }
    input[type="number"] {
        font-size: 1.2em;
        padding: 6px 12px;
        border-radius: 6px;
        border: 2px solid #6b4f00;
        margin-bottom: 16px;
        width: 60%;
        background: #fffbe6;
    }
    button {
        font-size: 1.1em;
        padding: 8px 24px;
        border-radius: 8px;
        border: none;
        background: #ffe082;
        color: #6b4f00;
        font-weight: bold;
        cursor: pointer;
        margin-top: 10px;
        transition: background 0.2s;
    }
    button:hover {
        background: #ffd54f;
    }
    .respuesta {
        margin-top: 24px;
        font-size: 1.2em;
        color: #008800;
        text-shadow: 1px 1px 2px #fff;
    }
</style>

<audio id="musica" src="/Audio/RoomV.mp3" loop preload="auto"></audio>

<div class="pregunta-container">
    <h1>Pregunta Final</h1>
    <div class="pregunta">쮺u치ntas velas hubo en total en todos los cuartos?</div>
    <form id="formPregunta">
        <input type="number" id="inputVelas" min="0" required />
        <br />
        <button type="submit">Responder</button>
    </form>
    <div class="respuesta" id="respuestaFinal" style="display:none;"></div>
    <button id="continuarBtn" style="display:none;margin-top:18px;">Continuar</button>
</div>

@section Scripts {
<script>
    // M칰sica de fondo
    const audio = document.getElementById('musica');
    window.addEventListener('DOMContentLoaded', function() {
        const selectedMusic = localStorage.getItem('selectedMusic');
        if (selectedMusic) {
            audio.src = selectedMusic;
        }
        audio.volume = 0.8;
        const savedTime = localStorage.getItem('musicaTime');
        if (savedTime) {
            audio.currentTime = parseFloat(savedTime);
        }
        audio.play().catch(() => {
            let btn = document.createElement('button');
            btn.id = "playMusicBtn";
            btn.textContent = "Reproducir m칰sica";
            btn.onclick = function() {
                audio.play();
                btn.remove();
            };
            document.body.appendChild(btn);
        });
    });
    audio.ontimeupdate = function() {
        localStorage.setItem('musicaTime', audio.currentTime);
    };

    // L칩gica de la pregunta
    document.getElementById('formPregunta').addEventListener('submit', function(e) {
        e.preventDefault();
        document.getElementById('respuestaFinal').style.display = 'block';
        document.getElementById('respuestaFinal').textContent = 'Tranquilo, era un peque침o chistok, no te voy a joder as칤 游때';
        document.getElementById('continuarBtn').style.display = 'inline-block';
    });
    document.getElementById('continuarBtn').onclick = function() {
        window.location.href = '/Home/HistoriaIX';
    };
</script>
} 