@{
    ViewData["Title"] = "Sala III";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

<style>
    body {
        background-image: url('/Imagenes/CuartoIII.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }

    .cajon1, .cajon2, .cajon3, .puerta, .puertaM1, .puertaM2, .lista, .caldera, .velaColgada {
        position: absolute;
    }

    .cajon1 a, .cajon2 a, .cajon3 a, .puerta a, .puertaM1 a, .puertaM2 a, .lista a, .caldera a, .velaColgada a {
        display: block;
        position: absolute;
        cursor: pointer;
        background: rgba(255,255,255,0);
    }

    .cajon1 a {
        left: 32vw;  
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "51vh" : "45vh");
        width: 9vw;  
        height: 20vh; 
    }

    .cajon2 a {
        left: 42vw;  
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "51vh" : "45vh");
        width: 9vw;  
        height: 20vh; 
    }

    .cajon3 a {
        left: 52.5vw;  
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "51vh" : "45vh");
        width: 9vw;  
        height: 20vh; 
    }

    .puerta a {
        left: 54vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "26vh" : "20vh");
        width: 4.5vw;  
        height: 13vh; 
    }

    .puertaM1 a {
        left: 48vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "33vh" : "27vh");
        width: 2vw;  
        height: 6vh; 
    }

    .puertaM2 a {
        left: 75vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "63vh" : "57vh");
        width: 5vw;  
        height: 14vh; 
    }

    .lista a {
        left: 45.2vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "4vh" : "-2vh");
        width: 7.5vw;  
        height: 22vh; 
    }

    .caldera a {
        left: 75vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "7.5vh" : "1.5vh");
        width: 6vw;  
        height: 34vh;
    }

    .velaColgada a {
        left: 75vw;   
        top: @(ViewBag.cuartoIII.primeraPistaEncontrada == false ? "7.5vh" : "1.5vh");
        width: 6vw;  
        height: 34vh;
    }
    
    .container {
    width: 29%;
    background: rgba(255, 245, 180, 0.85);
    border-radius: 15px;
    margin-left: 1%;
    padding-bottom: 0.4%;
    box-shadow: 0 4px 16px 0 rgba(120, 100, 40, 0.18);
    }

    .mensaje, h1 {
    font-family: 'Montserrat', Arial, sans-serif;
    color: #6b4f00;
    margin-left: 1%;
    text-shadow: 2px 2px 3px #776533;
    letter-spacing: 1px;
    font-weight: 700;
    }

    h1 {
        font-size: 200%;
    }

    .mensaje {
        font-size: 130%;
    }

    #playMusicBtn {
        position: fixed;
        top: 5%;
        right: 5%;
        padding: 3% 7%;
        background: linear-gradient(90deg, #ffe082 0%, #ffd54f 100%);
        color: #6b4f00;
        font-family: 'Montserrat', Arial, sans-serif;
        font-size: 1.5vw;
        font-weight: bold;
        border: none;
        border-radius: 12px;
        box-shadow: 0 2% 8% rgba(120, 100, 40, 0.18);
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
        z-index: 1000;
    }
    #playMusicBtn:hover {
        background: linear-gradient(90deg, #ffd54f 0%, #ffe082 100%);
        transform: scale(1.05);
    }

    .cajaCodigo {
        width: 50%;
        background: rgba(255, 245, 180, 0.85);
        border-radius: 15px;
        margin-left: 5%;
        margin-top: 4%;
        box-shadow: 0 4px 16px 0 rgba(120, 100, 40, 0.18);
    }

    .cajaCodigo p, .cajaCodigo input[type="text"] {
        font-family: 'Montserrat', Arial, sans-serif;
        color: #6b4f00;
        text-shadow: 2px 2px 3px #776533;
        letter-spacing: 1px;
        font-weight: 700;
        text-align: center;
        font-size: 150%;
    }

    .cajaCodigo p {
        margin-top: 1%;
    }

    .cajaCodigo form {
        text-align: center;
    }

    .cajaCodigo input[type="text"] {
        width: 60%;
        padding: 0.5%;
        border: 2px solid #6b4f00;
        background: rgba(219, 213, 170, 0.65);
        border-radius: 5px;
        margin-top: 1%;
    }

    .cajaCodigo input[type="submit"] {
        padding: 0.5% 1%;
        border: none;
        background: #6b4f00;
        color: white;
        font-family: 'Montserrat', Arial, sans-serif;
        font-size: 120%;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 1%;
        margin-bottom: 2%;
    }
</style>

<div class="container">

<h1>Tiempo restante: <span id="contador">@ViewBag.segs</span> segundos</h1>
<audio id="musica" src="/Audio/RoomIII.mp3" loop preload="auto"></audio>

@if (ViewBag.cuartoIII.primeraPistaEncontrada == false)
{
    <div class="mensaje">¡Tienes 300 segundos para buscar pistas!</div>
}
else {
    <div class="mensaje">¡Busca la contraseña y abre la puerta! ¡Tienes 100 segundos!</div>
}

</div>

<div class="cajon1">
    @if (ViewBag.cuartoIII.cosas[0].estadoDeMaterial == true)
    {
        <a href="@Url.Action("Cajon")"></a>
    }
    else
    {
        <a href="@Url.Action("NoDisponible3")"></a>
    }
</div>
    
<div class="cajon2">
    <a href="@Url.Action("cajon2")"></a>
</div>

<div class="cajon3">
    <a href="@Url.Action("NoDisponible3")"></a>
</div>

<div class="puerta">
    @if (ViewBag.cuartoIII.cosas[3].estadoDeMaterial == true)
    {
        <div class="cajaCodigo">
            <p>Escribe el código:</p>
            <form action='@Url.Action("VerificarCodigo")' method="get">
                <input type="text" name="codigo" required/>
                <input type="submit"/>
            </form>
        </div>
    }
    else
    {
        <a href="@Url.Action("NoDisponible3")"></a>
    }
</div>

<div class="puertaM1">
    @if (ViewBag.cuartoIII.cosas[4].estadoDeMaterial == true)
    {
        <a href="@Url.Action("Obscuridad")"></a>
    }
    else
    {
        <a href="@Url.Action("NoDisponible3")"></a>
    }
</div>
</div>

<div class="puertaM2">
    <a href="@Url.Action("NoDisponible3")"></a>
</div>

<div class="lista">
    @if (ViewBag.cuartoIII.cosas[6].estadoDeMaterial == true)
    {
        <a href="#" onclick="abrirPopup(); return false;"></a>
    }
    else
    {
        <a href="@Url.Action("NoDisponible3")"></a>
    }
</div>

<div class="caldera">
    @if (ViewBag.cuartoIII.cosas[7].estadoDeMaterial == true)
    {
        <a href='@Url.Action("Cocinar")'></a>
    }
    else
    {
        <a href="@Url.Action("NoDisponible3")"></a>
    }
</div>

<div class="velaColgada">
    <a href="@Url.Action("VelaColgada")"></a>
</div>

@section Scripts 
{
    <script>
        const TIEMPO_TOTAL = @ViewBag.segs;
        const elemento = document.getElementById('contador');

        // Solo reinicia el contador si NO existe en localStorage
        let inicio = localStorage.getItem('inicioContador');
        if (!inicio) {
            inicio = Date.now();
            localStorage.setItem('inicioContador', inicio);
        } 
        else {
            inicio = parseInt(inicio);
        }

        function actualizarContador() {
