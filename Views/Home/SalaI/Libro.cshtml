@{
    ViewData["Title"] = "Libro";
}

<style>

body {
    background: black;
    margin: 0;
    padding: 0;
    cursor: pointer;
}

#contenedor-historia {
    width: 80%;
    margin-top: 5%;
    margin-left: 10%;
    margin-right: 10%;
    padding-top: 2%;
    padding-bottom: 2%;
    padding-left: 3%;
    padding-right: 3%;
    background: black;
    text-align: center;
}

#titulo-typewriter {
    color: white;
    font-size: 400%;
    font-family: 'Fira Mono', 'Roboto Mono', 'Source Code Pro', 'Courier New', Courier, monospace;
    font-weight: bold;
    text-align: center;
    margin-top: 5%;
    margin-bottom: 2%;
    letter-spacing: 0.2%;
    text-shadow: 0.2% 0.2% 0.8% black, 0 0 0.2% white;
}

#historia-typewriter {
    color: white;
    font-size: 220%;
    font-family: 'Fira Mono', 'Roboto Mono', 'Source Code Pro', 'Courier New', Courier, monospace;
    font-weight: 400;
    text-align: center;
    margin-top: 4%;
    margin-bottom: 2%;
    letter-spacing: 0.3%;
    text-shadow: 0.1% 0.1% 0.6% black, 0 0 0.2% white;
}

#mensaje-espacio {
    opacity: 0;
    transition: opacity 1s;
    text-align: center;
    color: white;
    font-family: 'Fira Mono', 'Roboto Mono', 'Source Code Pro', 'Courier New', Courier, monospace;
    font-size: 220%;
    margin-top: 4%;
    text-shadow: 0 0 1% black, 0 0 0.2% white;
    letter-spacing: 0.1%;
}

</style>

<div>
    <p id="historia-typewriter"></p>
</div>
<p id="mensaje-espacio" style="opacity:0; transition: opacity 1s; text-align:center; color:white; font-family:'Fira Mono', 'Roboto Mono', 'Source Code Pro', 'Courier New', Courier, monospace; font-size:120%;">Presione la tecla de espacio para pasar de escena</p>

<script>
const historia = `¿Qué es esto, un libro que solo tiene una sola página con palabras? ¿Qué clase de persona tiene un libro de una sola página? Dice lo que parece un código de contraseña: "2P0l1sgKa". Quizás esto podría ser útil en el futuro.`;

const pElement = document.getElementById('historia-typewriter');
const mensajeEspacio = document.getElementById('mensaje-espacio');
let i = 0;
let j = 0;
let terminado = false;
let esperandoSkip = false;
let mostrandoHistoria = true;
let skipAnimacion = false;

function escribirHistoria() {
    if (skipAnimacion) {
        pElement.textContent = historia;
        mostrandoHistoria = false;
        terminado = true;
        mensajeEspacio.style.opacity = 1;
        return;
    }
    if (j <= historia.length) {
        pElement.textContent = historia.substring(0, j);
        j++;
        setTimeout(escribirHistoria, 40);
    } else {
        mostrandoHistoria = false;
        terminado = true;
        mensajeEspacio.style.opacity = 1;
    }
}
document.addEventListener('keydown', function(event) {
    if (event.code === 'Space') {
        event.preventDefault();
        if (mostrandoHistoria) {
            if (!esperandoSkip) {
                mensajeEspacio.textContent = 'Presione espacio de nuevo para saltar';
                mensajeEspacio.style.opacity = 1;
                esperandoSkip = true;
            } else {
                skipAnimacion = true;
            }
        } else if (terminado) {
            if (!esperandoSkip) {
                mensajeEspacio.textContent = 'Presione espacio de nuevo para saltar';
                esperandoSkip = true;
            } else {
                window.location.href = '/Home/PrimerCuarto';
            }
        }
    }
});
</script>
