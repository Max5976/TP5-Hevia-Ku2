@{
    ViewData["Title"] = "Cofre";
}
<style>
    body {
        background-image: url('/Imagenes/Carta.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }

    .carta a {
        cursor: pointer;
    }

    .mensaje {
        font-size: 200%;
        font-family: 'Fira Mono', 'Roboto Mono', 'Source Code Pro', 'Courier New', Courier, monospace;
    }
</style>

<div class="carta">
    <a href="Carta.cshtml">
        <input button>
    </a>
</div>

<p class="mensaje">Presione la tecla de espacio para volver al cuarto</p>

<script>
    document.addEventListener('keydown', function(event) {
        if (event.code === 'space') {
            vent.preventDefault();
            window.location.href = 'SalaI/PrimerCuarto.cshtml';
        }
    });
</script>

