@section Scripts {
<script>
    // M√∫sica de fondo
    const audio = document.getElementById('musica');
    window.addEventListener('DOMContentLoaded', function() {
        audio.volume = 0.8;
        audio.play().catch(() => {
            let btn = document.createElement('button');
            btn.id = "playMusicBtn";
            btn.textContent = "Reproducir m√∫sica";
            btn.onclick = function() {
                audio.play();
                btn.remove();
            };
            document.body.appendChild(btn);
        });

        // --- SCROLL MANUAL CON JS ROBUSTO ---
        const anim = document.getElementById('creditosAnim');
        const container = document.getElementById('creditosContainer');
        const durNormal = 125; // segundos
        const durRapido = 20; // segundos
        let speed = 1; // velocidad actual (interpolada)
        let targetSpeed = 1; // velocidad deseada
        let elapsed = 0;
        let lastFrame = null;
        let finished = false;

        function getScrollDistance() {
            const btn = document.getElementById('volverBtn');
            const btnOffset = btn.offsetTop + (btn.offsetHeight / 2);
            const vh = window.innerHeight;
            // Queremos que el centro del bot√≥n coincida con el centro de la pantalla
            return btnOffset - (vh / 2);
        }

        function animate(ts) {
            if (finished) return;
            if (!lastFrame) lastFrame = ts;
            let delta = (ts - lastFrame) / 1000;
            lastFrame = ts;
            // Suavizado de velocidad
            speed += (targetSpeed - speed) * 0.15;
            let dur = durNormal;
            let dist = getScrollDistance();
            elapsed += delta * speed;
            let percent = Math.min(elapsed / dur, 1);
            let y = -dist * percent;
            anim.style.transform = `translateY(${y}px)`;
            if (percent < 1) {
                requestAnimationFrame(animate);
            } else {
                anim.style.transform = `translateY(${-dist}px)`;
                finished = true;
            }
        }
        requestAnimationFrame(animate);

        window.addEventListener('keydown', function(e) {
            if ((e.code === 'Space' || e.keyCode === 32)) {
                targetSpeed = durNormal / durRapido;
            }
        });
        window.addEventListener('keyup', function(e) {
            if ((e.code === 'Space' || e.keyCode === 32)) {
                targetSpeed = 1;
            }
        });
    });
</script>
